---
interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;

const text = {
  es: {
    tagline: 'Tu negocio, siempre creciendo.',
    badge: 'Negocio de Propietaria Latina'
  },
  en: {
    tagline: 'Your business, always growing.',
    badge: 'Latina-owned Business'
  }
};

const t = text[lang];
---

<footer class="bg-forest text-cream py-10">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="text-center md:text-left">
        <p class="text-gold text-lg font-medium mb-2">{t.tagline}</p>
        <p class="text-cream/70 text-sm">
          &copy; 2026 Creciendo. A <strong class="text-cream">TinyGoat Ventures</strong> Company.
        </p>
      </div>
      <div class="text-center md:text-right">
        <a href="tel:4077662649" class="text-gold text-xl font-semibold hover:text-cream transition-colors">
          (407) 766-2649
        </a>
        <p class="text-cream/70 text-sm mt-2">{t.badge}</p>
      </div>
    </div>
  </div>
</footer>
