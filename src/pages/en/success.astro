---
import Layout from '../../layouts/Layout.astro';
---

<Layout
  title="Thank You! | Creciendo Studio"
  description="Thank you for contacting us. We'll be in touch soon."
  lang="en"
>
  <main class="min-h-screen bg-forest flex items-center justify-center px-4">
    <div class="text-center max-w-lg">
      <div class="text-6xl mb-6">ðŸŽ‰</div>
      <h1 class="font-display text-4xl md:text-5xl font-bold text-cream mb-4">
        Thank You!
      </h1>
      <p class="text-cream/80 text-lg mb-8">
        We received your information. We'll research your current presence and reach out with a personalized plan very soon.
      </p>
      <a
        href="/en/"
        class="inline-flex items-center px-8 py-4 bg-terracotta text-cream font-semibold rounded-full hover:bg-terracotta-dark transition-all duration-300"
      >
        Back to Home
      </a>
      <p class="text-cream/50 text-sm mt-8">
        Redirecting automatically in <span id="countdown">5</span> seconds...
      </p>
    </div>
  </main>

  <script>
    let seconds = 5;
    const countdownEl = document.getElementById('countdown');

    const interval = setInterval(() => {
      seconds--;
      if (countdownEl) countdownEl.textContent = String(seconds);
      if (seconds <= 0) {
        clearInterval(interval);
        window.location.href = '/en/';
      }
    }, 1000);
  </script>
</Layout>
